<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/segnalazioniList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dip">

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@android:color/black"/>
        <TextView
            android:id="@+id/nickname"
            android:text="Nickname iscritto"
            android:textAlignment="center"
            android:background="#FFF"
            android:layout_width="160dip"
            android:textSize="20dip"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>


        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@android:color/black"/>
        <TextView
            android:id="@+id/tipologia"
            android:text="Tipologia"
            android:layout_width="146dip"
            android:textAlignment="center"
            android:background="#FFF"
            android:textSize="20dip"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>


        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@android:color/black"/>

        <Button
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:shadowColor="#FFF"
            android:outlineAmbientShadowColor="#FFF"
            android:textStyle="italic"
            android:backgroundTint="#FFF"
            android:textColor="#DBA73D"
            android:textSize="10dp"
            android:text="info"
            android:onClick="onClickInfo"/>

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@android:color/black"/>

    </LinearLayout>
    <View
        android:layout_width="372dip"
        android:layout_marginRight="20dip"
        android:layout_marginLeft="20dip"
        android:layout_below="@id/segnalazioniList"
        android:layout_height="1dp"
        android:background="@android:color/black"/>

</RelativeLayout>